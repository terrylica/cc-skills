#!/usr/bin/env bash
#MISE description="Complete 4-phase release workflow"
#MISE depends=["release:preflight"]
set -euo pipefail

echo ""
echo "╔═══════════════════════════════════════════════════════════╗"
echo "║  cc-skills Full Release Workflow                          ║"
echo "╚═══════════════════════════════════════════════════════════╝"
