# Phase 2: Version
mise run release:version

# Phase 3: Sync
mise run release:sync

# Phase 4: Verify
mise run release:verify

echo ""
echo "╔═══════════════════════════════════════════════════════════╗"
echo "║  ✓ Release workflow complete!                             ║"
echo "╚═══════════════════════════════════════════════════════════╝"
echo ""
