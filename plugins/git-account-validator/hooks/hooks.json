{
  "description": "Multi-account GitHub authentication validation (git push + gh CLI isolation)",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/validate-git-push.sh",
            "timeout": 15
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/validate-gh-isolation.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
