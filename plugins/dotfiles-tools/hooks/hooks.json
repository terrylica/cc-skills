{
  "description": "Chezmoi sync: PostToolUse reminders + Stop hook enforcement",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/chezmoi-sync-reminder.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/chezmoi-stop-guard.mjs",
            "timeout": 15000
          }
        ]
      }
    ]
  }
}
