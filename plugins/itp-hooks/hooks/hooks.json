{
  "description": "ITP workflow enforcement - implementation standards, documentation coupling, and silent failure detection",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash|Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/posttooluse-reminder.sh",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/silent-failure-detector.sh",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
